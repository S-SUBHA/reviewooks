<%- include("partials/header.ejs") %>
<main>
    <div class="box">
        <div class="new-book">
            <form action="/addBook" method="post">
                <div>
                    <label for="title">Title of the book:</label>
                    <input type="text" name="title" id="title" required>
                </div>
                <div>
                    <label for="isbn_id">ISBN:</label>
                    <input type="text" name="isbn_id" id="isbn_id" required>
                </div>
                <div>
                    <label for="author">Author:</label>
                    <input type="text" name="author" id="author" required>
                </div>
                <div>
                    <label for="rating">Rating:</label>
                    <input type="text" name="rating" id="rating" required>
                </div>
                <div>
                    <label for="mini_review">Mini Review</label>
                    <input type="text" name="mini_review" id="mini_review" required>
                </div>
                <div>
                    <label for="date_of_read">Date</label>
                    <input type="date" name="date_of_read" id="date_of_read" required>
                </div>
                <button type="submit">Add Book</button>
            </form>

        </div>

    </div>
</main>
<%- include("partials/footer.ejs") %>